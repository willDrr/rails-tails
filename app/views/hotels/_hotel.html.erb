<div id="<%= dom_id hotel %>">
  <div class="max-w-sm bg-white rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
  <a href="#">
  <img class="p-8 rounded-t-lg" src="/assets/product-1.png" alt="product image">
  </a>
  <div class="px-5 pb-5">
  <a href="#">
    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= hotel.hotel_name %></h5>
  </a>
  <div class="flex items-center mt-2.5 mb-5">
    <%- hotel.star_rating.times do -%>
      <svg class="w-5 h-5 text-yellow-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
    <%- end -%>
    <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= hotel.star_rating %></span>
  </div>
  <div class="flex justify-between items-center">

  <span class="text-3xl font-bold text-gray-900 dark:text-white">$599</span>
    <% if action_name != "show" %>
      <%= link_to "Show this hotel", hotel, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>
  </div>
  </div>
</div>
