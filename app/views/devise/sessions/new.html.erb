<div class="w-full max-w-xs">
  <h2 class="font-semibold text-xl tracking-tight">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me,  class: 'form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer' %> 
        <%= f.label :remember_me, class: 'form-check-label inline-block text-gray-800' %> 
      </div>
      <br />
    <% end %>

    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4"%>  
    </div>
    <span>
      <%= link_to "Forgot password?", "password/new", class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </span>
    
    <br />
    <hr >

    <span>
      <%= link_to "Don't have an account? Create one", "sign_up", class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </span>   
  <% end %>

  <%# <%= render "devise/shared/links" %>
</div>
