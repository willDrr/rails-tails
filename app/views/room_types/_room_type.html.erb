<div id="<%= dom_id room_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Room price:</strong>
    <%= room_type.room_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Room description:</strong>
    <%= room_type.room_description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this room type", room_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this room type', edit_room_type_path(room_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
